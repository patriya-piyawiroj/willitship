{
  "name": "ethereum-local-node",
  "version": "1.0.0",
  "description": "Local Ethereum node setup using Hardhat",
  "scripts": {
    "compile": "hardhat compile",
    "node": "hardhat node --hostname 0.0.0.0",
    "node:fund": "hardhat node --hostname 0.0.0.0 & sleep 3 && node fund-accounts.js"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.19.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.1"
  }
}

